  type:      git
  location:  git://github.com/nh2/haskell-netpbm.git


library
  exposed-modules:
    Graphics.Netpbm
  build-depends:
      base < 5
    , attoparsec >= 0.10
    , attoparsec-binary >= 0.2
    , bytestring >= 0.9
    , storable-record >= 0.0.2.5
    , unordered-containers >= 0.1.3.0
    , vector >= 0.7
    , vector-th-unbox >= 0.2.0.1
  hs-source-dirs:
    src
  default-language: Haskell2010
  ghc-options: -Wall


test-Suite tests
