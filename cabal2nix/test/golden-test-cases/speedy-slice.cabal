  hs-source-dirs:      test
  main-is:             Rosenbrock.hs
  default-language:    Haskell2010
  ghc-options:
    -rtsopts
  build-depends:
      base              >= 4 && < 6
    , mwc-probability   >= 1.0.1
    , speedy-slice

Test-suite bnn
