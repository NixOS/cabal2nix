  hs-source-dirs:      test
  main-is:             BNN.hs
  default-language:    Haskell2010
  ghc-options:
    -rtsopts
  build-depends:
      base              >= 4 && < 6
    , containers        >= 0.5 && < 0.6
    , mwc-probability   >= 1.0.1
    , speedy-slice

